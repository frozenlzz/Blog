<%- include('../shares/header') %>
<link rel="stylesheet" href="/bower_components/editor.md/css/editormd.min.css">
    <style>
        table,
        td {
            border-collapse: collapse;
        }

        td {
            padding: 10px;
        }
        .form-group{
            width:40%; 
            height: auto;
        }
    </style>
    </head>

    <body>
        <div id="wrapper">
            <%- include('../shares/menu') %>
                <div id="page-wrapper" class="clearfix">
                    <h1 style="text-align:center;">文章修改</h1>
                    <div class="col-md-12">
                        <form action="/article/<%= data._id %>/update" method="post" enctype="multipart/form-data" class="form-horizontal">
                            <div class="">
                                <label for="exampleInputNickname">标题</label>
                                <input type="text" class="form-control" id="exampleInputNickname" placeholder="标题" name="title" value="<%= data.title %>">
                            </div>
                            <div class="">
                                <label>文章分类</label>
                                <select class="form-control" name="cate_id" id="">
                                    <option value="">请选择</option>
                                    <%for(var i=0;i<categories.length;i++){%>
                                    <option value="<%=categories[i]._id%>"><%=categories[i].name%></option>
                                    <%}%>
                                </select>
                            </div>
                            <div class="">
                                <label for="exampleInputPassword1">文章摘要</label>
                                <textarea class="form-control" name="intro" id="exampleInputPassword1" rows="5"><%= data.intro %></textarea>
                            </div>
                            <div class="">
                                <label for="exampleInputPassword1">文章内容</label>
                                <div id="editormd">
                                    <textarea class="form-control" name="content" id="exampleInputPassword1" cols="30" rows="10"><%= data.content %></textarea>
                                </div>
                            </div>
                            <div class="">
                                <label for="exampleInputFile">文章图片</label>
                                <input type="file" id="exampleInputFile" name="pic">
                            </div>
                            <button type="submit" class="btn btn-default" style="margin:20px 0 30px 0;">提交</button>
                        </form>
                    </div>
                </div>
        </div>
        <!-- /#wrapper -->
    </body>
    <%- include('../shares/footer') %>
    <script src="/bower_components/editor.md/editormd.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var editor = editormd("editormd", {
                path : "/bower_components/editor.md/lib/",
                height: 500,
                imageUpload : true,
                imageFormats : ["jpg", "jpeg", "gif", "png", "bmp", "webp"],
                imageUploadURL : "/uploads",
            }); 
        });
    </script>
</html>