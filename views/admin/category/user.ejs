<%- include('../shares/header') %>
    <style>
    </style>
    </head>

    <body>
        <div id="wrapper">
            <%- include('../shares/menu') %>

                <div id="page-wrapper" class="clearfix">
                    <h1 style="text-align:center;">分类列表信息</h1>


                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                用户列表
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="dataTables_length" id="dataTables-example_length">
                                                <label>
                                                    展示 
                                                    <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm">
                                                        <option value="1">1</option>
                                                        <option value="3">3</option>
                                                        <option value="5">5</option>
                                                        <option value="10">10</option>
                                                    </select>
                                                    条信息
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div id="dataTables-example_filter" class="dataTables_filter"><label>搜索:<input type="search" class="form-control input-sm" placeholder="" aria-controls="dataTables-example"></label></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                                <thead>
                                                    <tr role="row">
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 170px;">ID</th>
                                                        <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 155px;" aria-sort="descending">分类名称</th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 139px;">操作</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i=0;i<cates.length;i++){%>
                                                        <tr class="gradeA odd" role="row">
                                                            <td class="">
                                                                <%= cates[i]._id %>o</td>
                                                            <td class="sorting_1">
                                                                <%= cates[i].name %>
                                                            </td>
                                                            <td class="center">
                                                                <a href="/category/<%= cates[i]._id %>/edit" class="btn btn-xs btn-info">修改</a>
                                                                <a href="javascript:;" d-href="/category/<%= cates[i]._id %>/delete" class="btn btn-xs btn-danger del">删除</a></td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                                <ul class="pagination">
                                                    <%- pages %>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                </div>
        </div>
        <!-- /#wrapper -->
    </body>
    <%- include('../shares/footer') %>
        <script>
            $('.del').click(function() {
                if (confirm("确定删除该用户？？")) {
                    alert('删除成功！');
                    // 讲href值改变
                    $(this).attr('href', $(this).attr('d-href'));
                }
            })

        </script>

        </html>